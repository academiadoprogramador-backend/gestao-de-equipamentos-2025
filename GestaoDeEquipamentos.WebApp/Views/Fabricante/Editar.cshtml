@using GestaoDeEquipamentos.Dominio.ModuloFabricante

@model Fabricante

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <title>Edição de Fabricante | Gestão de Equipamentos</title>
</head>

<body style="background-color: #E8ECED;">

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand fs-4 fw-bold" href="/">Gestão de Equipamentos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav gap-2 ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-primary fw-semibold" href="/Fabricante">Fabricantes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary fw-semibold" href="/garcons">Equipamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary fw-semibold" href="/produtos">Chamados</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="container my-4">
        <h2>Edição de Fabricante</h2>
    </header>

    <main class="container my-4">
        <div class="row justify-content-center my-5">
            <div class="col-md-7">
                <div class="card rounded-4 border-0">
                    <div class="card-body p-md-5">
                        <form action="/Fabricante/Editar/@Model.Id" method="post">
                            <h3>Formulário de Edição</h3>

                            <div class="form-group d-grid gap-2 mt-3">
                                <label for="Nome" class="control-label fs-5">Nome:</label>
                                <input name="Nome" class="form-control" value="@Model.Nome"/>
                            </div>
                            <div class="form-group d-grid gap-2 mt-3">
                                <label for="Email" class="control-label fs-5">Email:</label>
                                <input name="Email" class="form-control" value="@Model.Email" />
                            </div>
                            <div class="form-group d-grid gap-2 mt-3">
                                <label for="Telefone" class="control-label fs-5">Telefone:</label>
                                <input name="Telefone" class="form-control" value="@Model.Telefone" />
                            </div>
                            <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                                <a href="/Fabricante">Voltar para a listagem</a>
                                <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>