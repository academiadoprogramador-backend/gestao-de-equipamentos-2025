@using GestaoDeEquipamentos.Dominio.ModuloFabricante

@model List<Fabricante>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <title>Visualização de Fabricantes | Gestão de Equipamentos</title>
</head>

<body style="background-color: #E8ECED;">

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand fs-4 fw-bold" href="/">Gestão de Equipamentos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav gap-2 ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-primary fw-semibold" href="/Fabricante">Fabricantes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary fw-semibold" href="/garcons">Equipamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-primary fw-semibold" href="/produtos">Chamados</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="container my-4">
        <h2>Visualização de Fabricantes</h2>

        <a href="/Fabricante/Cadastrar" class="btn btn-primary mt-4">
            <i class="bi bi-plus"></i>
            Cadastrar novo/a
        </a>
    </header>

    <main class="container my-4">
        <div class="row flex-wrap gap-2">
            @foreach (Fabricante f in Model)
            {
                <div class="col-12 col-md-3">
                    <div class="card border-0">
                        <div class="card-body">
                            <h5 class="card-title">@f.Nome</h5>
                            <p class="card-text mb-0"><span class="fw-semibold">Telefone:</span> @f.Telefone</p>
                            <p class="card-text"><span class="fw-semibold">Email:</span> @f.Email</p>

                            <span class="d-flex gap-1 justify-content-end mt-4">
                                <a href="/Fabricante/Editar/@f.Id" class="btn btn-primary rounded-circle py-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="/Fabricante/Excluir/@f.Id" class="btn btn-danger rounded-circle py-2">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</body>
</html>